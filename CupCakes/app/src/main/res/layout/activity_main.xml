<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cuu"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Cupcake"
        android:layout_width="285dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="40dp"
        android:text="Cup Cake Factory"
        android:textAlignment="center"
        android:textColor="#196AAA"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="297dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="Click Here to Get started"
        android:textColor="#5C2717"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Clickhere"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_baseline_ads_click_24"
        android:contentDescription="@string/app_name"
        android:onClick="OpenHome"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="#3792DA"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>