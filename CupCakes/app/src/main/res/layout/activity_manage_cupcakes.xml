<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkwall"
    tools:context=".Manage_cupcakes">

    <EditText
        android:id="@+id/txtprice"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcattname" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E63C77"
        android:onClick="findCupcake"
        android:text="Update"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#E63C77"
        android:onClick="deleteCupcake"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="308dp"
        android:layout_height="53dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:text="Manage Cupcakes"
        android:textColor="#A11C4A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="60dp"
        android:onClick="getImage"
        android:text="Select Image"
        android:backgroundTint="#E63C77"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtprice" />

    <Button
        android:id="@+id/button24"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#E63C77"
        android:onClick="viewAllCupcake"
        android:text="view All Cupcakes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button25"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#E63C77"
        android:onClick="Create"
        android:text="Create"
        app:layout_constraintBottom_toTopOf="@+id/button24"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/CupcakeImage"
        android:layout_width="168dp"
        android:layout_height="153dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtprice"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="#E63C77"
        android:onClick="findCupcake"
        android:text="Find"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <EditText
        android:id="@+id/txtcakeid"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Cake ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/txtcattname"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Category Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcakeid" />

</android.support.constraint.ConstraintLayout>