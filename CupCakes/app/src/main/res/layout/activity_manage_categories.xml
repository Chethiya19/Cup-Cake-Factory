<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkwall"
    tools:context=".Manage_Categories">

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E63C77"
        android:onClick="updateCategory"
        android:text="Update"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="55dp"
        android:backgroundTint="#E63C77"
        android:onClick="deleteCategory"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:text="Manage Category"
        android:textColor="#A11C4A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtcid"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Category ID"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/txtcname"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Category Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcid" />

    <Button
        android:id="@+id/button24"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#E63C77"
        android:onClick="viewallcategories"
        android:text="view All Categories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button25"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="156dp"
        android:backgroundTint="#E63C77"
        android:onClick="create"
        android:text="Create"
        app:layout_constraintBottom_toTopOf="@+id/button24"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="#E63C77"
        android:onClick="findcategory"
        android:text="Find"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button25" />
</android.support.constraint.ConstraintLayout>